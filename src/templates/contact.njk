{% extends "_layout.njk" %}
{% set pageTitle = "Contact" %}

{% block content %}
    <div class="govuk-width-container app-site-width-container">
        <div class="govuk-main-wrapper govuk-main-wrapper--l">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">
                    <h1 class="govuk-heading-l govuk-!-font-weight-bold govuk-!-color-purple">Contact Us</h1>
                    <p class="govuk-body">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis non posuere turpis dignissim egestas.</p>

                    <form class="js-app-form-validation">
                        <div class="govuk-form-group">
                            <label class="govuk-label" for="name">
                                Name
                            </label>
                            <span id="name-hint" class="govuk-hint">
                                Required
                            </span>
                            <input class="govuk-input" id="name" name="name" type="text" aria-describedby="name-hint" required="required" data-value-missing="Enter your name">
                        </div>
                        <div class="govuk-form-group">
                            <label class="govuk-label" for="email">
                                Email
                            </label>
                            <span id="email-hint" class="govuk-hint">
                                Required
                            </span>
                            <input class="govuk-input" id="email" name="email" type="email" aria-describedby="email-hint" required="required" data-value-missing="Enter your email address" data-type-mismatch="Enter a valid email address">
                        </div>
                        <div class="govuk-form-group">
                            <label class="govuk-label" for="reason">
                                Reason for Contact
                            </label>
                            <select class="govuk-select" id="reason" name="reason">
                                <option value="Option A">Option A</option>
                                <option value="Option B">Option B</option>
                                <option value="Option B">Option C</option>
                                <option value="Option D">Option B</option>
                            </select>
                        </div>
                        <div class="govuk-form-group">
                            <label class="govuk-label" for="message">
                                Message
                            </label>
                            <span id="message-hint" class="govuk-hint">
                                Lorem ipsum dolor sit amet.
                            </span>
                            <textarea class="govuk-textarea" id="message" name="message" rows="5" aria-describedby="message-hint" required="required" data-value-missing="Enter your message"></textarea>
                        </div>
                        <div class="govuk-form-group">
                            <fieldset class="govuk-fieldset">
                                <legend class="govuk-fieldset__legend">
                                    <label class="govuk-label" for="newsletter">
                                        Do you wish to receive our monthly email newsletter?
                                    </label>
                                </legend>
                                <div class="govuk-radios govuk-radios--inline">
                                    <div class="govuk-radios__item">
                                        <input class="govuk-radios__input" id="newsletter-1" name="newsletter" type="radio" value="yes" required="required" data-value-missing="Choose whether you wish to receive the newsletter">
                                        <label class="govuk-label govuk-radios__label" for="newsletter-1">
                                            Yes
                                        </label>
                                    </div>
                                    <div class="govuk-radios__item">
                                        <input class="govuk-radios__input" id="newsletter-2" name="newsletter" type="radio" value="no">
                                        <label class="govuk-label govuk-radios__label" for="newsletter-2">
                                            No
                                        </label>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                        <button type="submit" data-prevent-double-click="true" class="govuk-button govuk-button--primary" data-module="govuk-button">
                            Send
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}